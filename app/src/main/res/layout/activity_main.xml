<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical"
        >


    <android.support.design.widget.FloatingActionButton
            android:layout_width="61dp"
            android:layout_height="66dp"
            android:clickable="true"
            android:layout_gravity="right"
            app:srcCompat="@drawable/ic_add_alert"
            android:id="@+id/floatingActionButton" android:layout_marginBottom="16dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
           tools:ignore="VectorDrawableCompat"/>

    <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" app:srcCompat="@drawable/ic_done"
            android:layout_marginLeft="300dp"
            tools:layout_editor_absoluteX="38dp" android:id="@+id/floatingActionButton2"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="MissingConstraints,VectorDrawableCompat"
            android:layout_gravity="top|right|top"
    />

    <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" app:srcCompat="@drawable/ic_add_alert" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp" android:layout_marginStart="16dp" android:id="@+id/floatingActionButton3"
            tools:ignore="VectorDrawableCompat"
android:layout_gravity="right"
    />

    <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:clickable="true" app:srcCompat="@drawable/ic_done" app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="321dp" android:layout_marginTop="40dp"

            android:layout_marginLeft="130dp"
            android:id="@+id/floatingActionButton4" tools:ignore="MissingConstraints,VectorDrawableCompat"/>


</LinearLayout>